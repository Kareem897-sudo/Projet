{% extends 'base.html.twig' %}
{% block title %}Profil de
	{{ app.user.prenom }}
	{{ app.user.nom }}
{% endblock %}


{% block body %}
	{% include "navbar.html.twig" %}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	<link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/blog/">
	{% include "profil.html.twig" %}
	<div class="grix xs4 container">
		{% for message in app.flashes('message') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 success">{{message}}</div>
			</div>
		{% endfor %}
		
		<div class="col-xs4 m-5">
			<h1>Profil de
				{{ app.user.prenom }}
				{{ app.user.nom }}</h1>
		</div>
		<div class="col-xs1 text-center">Nom :
			{{ app.user.nom }}</div>
		<div class="col-xs1 text-center">Prénom :
			{{ app.user.prenom }}</div>
		<div class="col-xs1 text-center">Email :
			{{ app.user.email }}</div>
		<div class="col-xs1 text-center">Téléphone :
			{{ app.user.telephone }}</div>
			<br>
		<div
			class="col-xs4 text-center"><a href="{{ path('modifier_profil') }}" class="btn btn-dark">Modifier le profil</a>
				            <a href="{{ path('modifier_motdepasse')}}" class="btn btn-primary">Modifier le mot de passe</a> 
		</div>
		<br>
		

		<div class="col-xs4">
			<h1>Commentaires de
				{{ app.user.prenom }}
				{{ app.user.nom }}</h1>
			{# </div>
			        {% for annonce in app.user.annonces %}
			            <div class="col-xs1">Titre :</div>
			            <div class="col-xs3">{{ annonce.title }}</div>
			        {% endfor %} #}

		</div>
	{% endblock %}
