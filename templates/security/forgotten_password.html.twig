{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}

	<link rel="stylesheet" href="{{ asset('assets/css/forgotten.css') }}"/>

	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-lg-4 col-12">
				<div class="password">


					<div class="bobo ">
						<form method="post">
							<br><br>

							<h1 class="text-center">Mot de passe oublié</h1>
							{% for flashError in app.flashes('danger') %}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								
							</button>
								<div class="alert alert-danger" role="alert">{{ flashError }}</div>
								
							{% endfor %}

							<label for="inputEmail" class="sr-only">Email</label>
							<input type="email" name="email" id="inputEmail" class="form-control col-sm-12" class="form-control" placeholder="Veuillez saisir votre email" required autofocus>
							<br>
							<div class="text-center">
								<button class="btn btn-lg btn-dark btn-sm text-center" type="submit">Envoyer !
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
